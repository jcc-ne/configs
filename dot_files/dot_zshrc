# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh
source $HOME/.bashrc

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
# ZSH_THEME="robbyrussell"

# -- set ZSH_THEME="" to load only fav_themes
ZSH_THEME=""  

# manually load themes
function theme_geo
{
   source $ZSH/fav_themes/geometry/geometry.zsh-theme
}
function theme_geomy
{
   source $ZSH/fav_themes/mygeo/geometry.zsh-theme
}
function theme_ago
{
    source $ZSH/fav_themes/agnoster.zsh-theme
}

function theme_random
{
  themes=($ZSH/themes/*zsh-theme)
  N=${#themes[@]}
  ((N=(RANDOM%N)+1))
  RANDOM_THEME=${themes[$N]}
  source "$RANDOM_THEME"
  echo "[oh-my-zsh] My random theme '$RANDOM_THEME' loaded..."
  export THEME="$RANDOM_THEME"
}

function theme_time
{
  themes=($ZSH/themes_time/*zsh-theme)
  N=${#themes[@]}
  ((N=(RANDOM%N)+1))
  RANDOM_THEME=${themes[$N]}
  source "$RANDOM_THEME"
  echo "[oh-my-zsh] my Random theme '$RANDOM_THEME' loaded..."
  export THEME="$RANDOM_THEME"
}

function theme_add2fav
{
  ln -s $THEME $ZSH/fav_themes/
}

function theme_add2time
{
  ln -s $THEME $ZSH/themes_time/
}

function theme_fav
{
  themes=($ZSH/fav_themes/*zsh-theme)
  themes+=$ZSH/fav_themes/geometry/geometry.zsh-theme
  themes+=$ZSH/fav_themes/mygeo/geometry.zsh-theme
  N=${#themes[@]}
  ((N=(RANDOM%N)+1))
  RANDOM_THEME=${themes[$N]}
  source "$RANDOM_THEME"
  echo "[oh-my-zsh] my Random theme '$RANDOM_THEME' loaded..."
  export THEME="$RANDOM_THEME"
}


